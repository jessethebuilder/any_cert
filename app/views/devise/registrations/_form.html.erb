<div id="new_user_registration">
  <div class="row">
    <%= link_to '(back)', '#', :id => 'return_to_new_user_session', :class => 'pull-right', :style => 'padding-right:20px;' %>

  </div>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name, :class => 'control-label' %>
      <%= f.text_field :name, :class => 'form-control', :autofocus => true %>
    </div>

    <div class="form-group">
      <%= f.label :email, :class => 'control-label' %>
      <%= f.email_field :email, :class => 'form-control' %>
      <p class="help-block">We will never share or sell your information</p>
    </div>

    <div class="form-group">
      <%= f.label :password, :class => 'control-label' %>
      <%= f.password_field :password, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, :class => 'control-label' %>
      <%= f.password_field :password_confirmation, :class => 'form-control' %>
    </div>

    <div class="checkbox">
      <label class="control-label">
        <%= f.check_box :send_newsletter, :checked => true %>
        I would like to regular Newsletters from <%= store_name %>
      </label>
    </div>

    <div class="checkbox">
      <label class="control-label">
        <%= f.check_box :send_deals, :checked => true %>
        I would like to occasionally receive information about promotions, specials, and deals from <%= store_name %>
      </label>
    </div>

    <div class="checkbox">
      <label class="control-label">
        <strong>
          <%= f.check_box :tos_confirmation, :checked => false %>
          I agree to the Terms of Service detailed
          <!-- todo TOS SLACKER -->
        </strong>
      </label>
    </div>


      <div class="form-group">
      <%= f.submit "Sign up", :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<script>
  hideOnClickAndShow('#back_to_new_user_session', '#new_user_registration', '#new_user_session');
</script>